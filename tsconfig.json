{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2016", "esnext.asynciterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "outDir": "./build",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2016",
  },
  "include": [
    "app.ts",
    "scripts/**/*.ts",
    "server/**/*.ts",
  ],
  "exclude": [
    "server/**/*.test.ts"
  ]
}