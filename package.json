  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.1.5",
    "@types/express": "^4.17.2",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^25.2.1",
    "@types/mongodb": "^3.3.12",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.12.14",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/eslint-plugin-tslint": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "chalk": "^3.0.0",
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.1",
    "husky": "^4.2.3",
    "jest": "^25.3.0",
    "nodemon": "^2.0.2",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.6.2",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "class-validator": "^0.11.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^14.5.8",
    "mongodb": "^3.3.5",
    "morgan": "^1.9.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^0.17.5",
    "typedi": "^0.8.0",
    "uuid": "^7.0.3"
  },
  "scripts": {
    "build": "yarn build:server && yarn build:client",
    "build:client": "cd client && yarn build",
    "build:server": "yarn clean:server && mkdir build && cp .env build && tsc",
    "clean": "yarn clean:server && yarn clean:client",
    "clean:client": "cd client && rm -rf build",
    "clean:server": "rm -rf build",
    "lint": "yarn lint:server",
    "lint:server": "eslint --ext .ts app.ts server",
    "lint:staged": "git diff --staged --name-only | xargs eslint --ext .ts --no-error-on-unmatched-pattern",
    "start:client": "cd client && yarn start",
    "start:server": "yarn build:server && concurrently \"tsc -w\" \"nodemon build/app.js\"",
    "test:server": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "ts-node scripts/preCommitHook.ts"
    }
  }
}
